property streams ${streams:map("target/nukleus-itests/tcp/destination.connects", 1024 * 1024)}

connect await PREPARED
        agrona://stream/bidirectional
        option reader ${agrona:manyToOneReader(streams.input)}
        option writer ${agrona:manyToOneWriter(streams.output)}
connected

write [0x00 0x00 0x00 0x01]
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write flush

write [0x00 0x00 0x00 0x02]
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write "client data 1"
write flush

read [0x00 0x00 0x00 0x01]
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]

read [0x00 0x00 0x00 0x02]
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read "server data 1"

write [0x00 0x00 0x00 0x02]
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write "client data 2"
write flush

read [0x00 0x00 0x00 0x02]
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read "server data 2"

close
closed
