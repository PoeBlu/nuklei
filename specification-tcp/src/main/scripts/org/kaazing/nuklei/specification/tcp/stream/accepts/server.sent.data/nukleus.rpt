property streams ${streams:map("target/nukleus-itests/tcp/destination.accepts", 1024 * 1024)}

connect await BOUND
        agrona://stream/bidirectional
        option reader ${agrona:manyToOneReader(streams.output)}
        option writer ${agrona:manyToOneWriter(streams.input)}
connected

write [0x00 0x00 0x00 0x01]
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x01]
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]

read [0x00 0x00 0x00 0x02]
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read "server data"

close
closed
