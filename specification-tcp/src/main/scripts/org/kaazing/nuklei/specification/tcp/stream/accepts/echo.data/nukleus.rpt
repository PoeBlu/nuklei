property handler ${streams:map("target/nukleus-itests/handler/streams/tcp", 1024 * 1024)}
property nukleus ${streams:map("target/nukleus-itests/tcp/streams/handler", 1024 * 1024)}

property newStreamId ${streams:randomBytes(8)}
property newReferenceId ${streams:randomBytes(8)}

connect await BOUND
        agrona://stream/bidirectional
        option reader ${agrona:manyToOneReader(nukleus.buffer)}
        option writer ${agrona:manyToOneWriter(handler.buffer)}
connected

write [0x00 0x00 0x00 0x01]
write ${newStreamId}
write ${newReferenceId}
write flush

read [0x00 0x00 0x00 0x01]
read ${newStreamId}
read [0..8]

write [0x00 0x00 0x00 0x02]
write ${newStreamId}
write "client data 1"
write flush

read [0x00 0x00 0x00 0x02]
read ${newStreamId}
read "server data 1"

write [0x00 0x00 0x00 0x02]
write ${newStreamId}
write "client data 2"
write flush

read [0x00 0x00 0x00 0x02]
read ${newStreamId}
read "server data 2"

close
closed
